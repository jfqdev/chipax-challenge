{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base"],
  "rules": {
    "arrow-body-style": "off",
    "prefer-arrow-callback": "off",
    "max-len": [2, {
      "code": 150,
      "ignoreStrings": true,
      "ignoreTemplateLiterals": true,
      "ignoreUrls": true
    }],
    "import/extensions": [
      "error",
      {
          "js": "ignorePackages"
      }
    ],
    "default-case": ["error", { "commentPattern": "^skip\\sdefault" }]
  }
}
